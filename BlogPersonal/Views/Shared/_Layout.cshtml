<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogPersonal.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header class="fixed-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-3" asp-area="" asp-controller="Home" asp-action="Index">JGRC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#seccion1">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#seccion2">About me</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#seccion3">Portfolio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#seccion4">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted" style="padding: 3rem;">
        
        <div class="text-center">
            <h1>Jordy Rodriguez Cebrian</h1>
            <h3>Software Developer</h3>
            <a href="https://github.com/jordycebrian?tab=repositories" class="icono" target="_blank"><i  class="bi bi-github m-1"></i></a>
            <a href="https://facebook/jordyxcebrian" class="icono" target="_blank"><i class="bi bi-facebook m-1"></i></a>
            <a href="https://www.linkedin.com/in/jordy-guadalupe-rodriguez-cebrian-b49a7b230/" class="icono" target="_blank"><i class="bi bi-linkedin m-1"></i></a>
        </div>
        

        <div class="container text-center">

            &copy; 2024 - BlogPersonal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
