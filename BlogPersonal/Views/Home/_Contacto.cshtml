@model BlogPersonal.Models.Contacto

<div style="padding-top: 6rem;" id="seccion4">
    <h1>Keep in Contact</h1>
</div>
<div class="container" >
   
    <div class="row row-cols-1 row-cols-md-2">
        <div class="col">
            <img id="foto" src="~/Imagenes/logoYo.jpg" alt="MyFoto"/>
        </div>
        <div class="col">
            <h1>Send me a message...</h1>
            <form asp-controller="Home" asp-action="Contacto" method="post">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Nombre" placeholder="Name"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com"/>
                </div>
                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea class="form-control" asp-for="Mensaje" name="Mensaje" rows="3"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>
